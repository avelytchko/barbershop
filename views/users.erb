<table class="table table-striped">
  <thead>
		<tr>
      <th>#</th>
      <th>Costumer Name</th>
      <th>Date of Visit</th>
      <th>Phone number</th>
      <th>Barber</th>
      <th>Color</th>
     </tr>
	</thead>
	<tbody>
		<% @cust_arr.each do |line| %>
			<% line.each_with_index do |col,index| %>
		<tr>
			<th scope="row"><%= index + 1 %></th>
				<% col.each do |row| %>
				<td><%= row.to_s.strip %></td>
				<% end %>
		</tr>
			<% end %>
			<% end %>
	</tbody>
</table>