<form action='/visit' method='post' class="well">
  <% if @message %>
    <div class="alert alert-success" role="alert"><%= @message %></div>
  <% end %>
  <div class="form-group">
    <label for="name">Ваше имя</label>
    <input type="text" class="form-control" id="name" placeholder="Name" name="user_name">
  </div>
  <div class="form-group">
    <label for="date">Время визита</label>
    <input type="text" class="form-control" id="date" placeholder="Date" name="date_time">
  </div>
  <div class="form-group">
    <label for="phone">Ваш телефон</label>
    <input type="text" class="form-control" id="phone" placeholder="Phone" name="phone">
  </div>
  <label for="selector">Парикмахер</label>
  <select class="form-control" id="selector" name="barber">
  	<option selected disabled>Выберите мастера</option>
	  <option>Walter White</option>
	  <option>Jessie Pinkman</option>
	  <option>Gus Fring</option>
	</select>
  <br>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>